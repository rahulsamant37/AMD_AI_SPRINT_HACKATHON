# ===== Required Configuration =====
# vLLM Server Configuration (Required)
VLLM_BASE_URL=http://localhost:3000
VLLM_MODEL_PATH=/home/user/Models/deepseek-ai/deepseek-llm-7b-chat

# Google APIs Credentials (Required) - for Calendar + Gmail
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.pickle

# ===== API Configuration =====
API_HOST=localhost
API_PORT=5000
DEBUG=true

# ===== vLLM DeepSeek Configuration =====
VLLM_TEMPERATURE=0.3
VLLM_MAX_TOKENS=2000

# ===== Scheduling Defaults =====
DEFAULT_MEETING_DURATION=30
DEFAULT_BUFFER_TIME=15
DEFAULT_WORK_START_HOUR=9
DEFAULT_WORK_END_HOUR=18
DEFAULT_TIMEZONE=UTC

# ===== Agent Configuration =====
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30
MAX_MEETING_SUGGESTIONS=3

# ===== Email Configuration =====
EMAIL_SENDER_NAME=SchedulAI
EMAIL_REPLY_TO=

# ===== Calendar Configuration =====
CALENDAR_LOOKAHEAD_DAYS=14
CALENDAR_MAX_EVENTS_PER_REQUEST=100

# ===== Security Configuration =====
ALLOWED_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# ===== Feature Flags =====
ENABLE_EMAIL_SENDING=true
ENABLE_CALENDAR_CREATION=true
ENABLE_AI_REASONING=true

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== Development/Testing =====
SKIP_CONFIG_VALIDATION=false 